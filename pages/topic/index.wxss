/* pages/topic/index.wxss */
.container {
  padding: 10rpx 16rpx;
}
.topic_list_ctr {
  float:left;
  margin:10rpx 0;
  width: 100%;
  height:auto;
  overflow: hidden;
  padding: 20rpx;
  background: #fff;
  box-sizing:border-box;
}
.topic_list_ctr image {
  width: 100%;
  display:block;
  border-radius: 10rpx;
}
.topic_list_ctt {
  float:left;
  width:100%;
  padding: 10rpx 0;
  box-sizing:border-box;
}
.topic_list_t1 {
  float: left;
  width: 100%;
  line-height: 60rpx;
  font-size: 32rpx;
}
.topic_list_title {
  float: left;
  width: 75%;
  color: #333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}
.topic_list_price {
  float: left;
  width: 25%;
  text-align: right;
}
.topic_list_subtitle {
  float: left;
  width: 100%;
  color: #888;
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

@import "/style/style.wxss";