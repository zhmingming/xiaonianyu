<!--pages/goods/detail.wxml-->
<loading hidden="{{hiddenLoading}}">正在加载</loading>
<view class="container">
    <!--头部图片-->
    <view class="swiper">
        <image src="{{detail.pic}}"/>
    </view>

    <view class='topic_title'>
        <view class='topic_t1'>距离结束还剩</view>
        <view class='topic_t2'>{{detail.countDD}}天{{detail.countHH}}小时{{detail.countMM}}分{{detail.countSS}}秒</view>
    </view>

    <view class='goods_list_ctr'>
        <view wx:for="{{goodsList}}" wx:key="key">
            <navigator url="/pages/goods/detail?id={{item.id}}" class='goods_list_cell'>
                <view class='goods_top_mark'>限时</view>
                <image mode='widthFix' src="{{item.pic}}"/>
                <view class='goods_list_ctt'>
                  <view class='goods_list_mark'>{{item.is_top==1 ? '精选' : '折后价'}}</view>
                  <view class="goods_list_t2">
                      <view class="fl">¥{{item.promotion_price}}<span class="span">¥{{item.markey_price}}</span></view>
                      <view class="fr"><span>{{item.rebate}}折</span></view>
                  </view>
                  <view class="goods_list_t1">{{item.title}}</view>
                  
                </view>
            </navigator>
        </view>
        <block wx:if="{{goodsList.length<1}}">
            <view class='none_ctr'><i class="iconfont icon-none"></i></view>
            <view class='none_txt'>暂无商品!</view>
        </block>
        <!--底线-->
        <view class='last_line_ctr' wx:if="{{goodsList.length>0}}">
            <view class='last_txt'>这是我的底线</view>
            <view class='last_line'></view>
        </view>
        <!--置顶-->
        <view class='to_top' hidden="{{hiddenTop}}" bindtap='goTop'><image src='../../images/icon_fanhuitob.png' /></view>
    </view>

</view>
