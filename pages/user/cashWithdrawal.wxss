/* pages/user/cashWithdrawal.wxss */

page {
  background: #f5f5f5;
}

view {
  box-sizing: border-box;
}

.container {
}

.main {
  background: #fff;
  width: 690rpx;
  min-height: 500rpx;
  padding: 52rpx 42rpx 60rpx;
  margin: 42rpx auto 0;
  border-radius: 6rpx;
}

.title {
  font-size: 28rpx;
}
.money{
  height: 100rpx;
}
.input-st {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  padding: 26rpx 0 16rpx 0;
}

.symbol {
  font-size: 80rpx;
  color: #000;
}

.whole {
  margin: 34rpx 0;
  color: #777;
  font-size: 26rpx;
}

.whole-tx {
  color: #dc030b;
}

.tx-btn-no {
  width: 100%;
  height: 88rpx;
  background: rgba(204, 204, 204, 1);
  border-radius: 6rpx;
  opacity: 0.8;
  margin: 0 auto;
  text-align: center;
  line-height: 88rpx;
  font-size: 26rpx;
}
.tx-btn-yes {
   color: #fff;
  background:#dc030b;
 
}
