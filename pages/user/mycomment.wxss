/* pages/user/mycomment.wxss */
@import "/style/cells.wxss";
.m_textarea {
  float: left;
  width:100%;
  height:144rpx;
  line-height: 48rpx;
  font-size: 32rpx;
}

.goods_pic {
  float: left;
  width: 100rpx;
  height: 100rpx;
}
.goods_pic image {
  width: 100%;
}
.goods_ctr {
  float: right;
  width: 580rpx;
  height: 100rpx;
  display:table;
}
.goods_txt {
  vertical-align:middle;
  display:table-cell;
}
.goods_title,.goods_spec {
  float: left;
  width: 100%;
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.goods_spec {
  font-size: 28rpx;
  color: #888;
}