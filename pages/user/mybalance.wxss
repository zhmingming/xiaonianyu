/* pages/user/mybalance.wxss */
@import "/style/cells.wxss";
page{
  background-color:#fff;
}
.paylog_top {
  width: 100%;
  height: auto;
  background: #f25939;
  padding: 24rpx;
  box-sizing: border-box;
  color: #fff;
  position: relative;
}
.paylog_txt {
  float: left;
  width: 100%;
  line-height: 50rpx;
  font-size: 28rpx;
}
.paylog_txt span {
  font-size: 40rpx;
  font-weight: bold;
}
.paylog_btn {
    position: absolute;
    line-height: 60rpx;
    padding: 0 20rpx;
    color: #fff;
    font-size: 28rpx;
    border-radius: 8rpx;
    border: 1px #fff solid;
    right: 24rpx;
    top: 46rpx;
    z-index: 9;
}

.paylog_t1,.paylog_t2 {
  float: left;
  width: 100%;
  font-size: 28rpx;
  line-height: 44rpx;
}
.paylog_t1 .span1 {
  color: #b4282d;
}
.paylog_t1 .span2 {
  color: #48b76a;
}

.paylog_t2 {
  font-size: 24rpx;
  color: #999;
}

/*弹窗*/
.dialog_mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}
.pop_ctt {
  position: fixed;
  top: 200rpx;
  width: 100%;
  z-index: 11;
  display: none;
}
.pop_close {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 220rpx;
  right:100rpx;
  z-index: 15;
  display: none;
}
.pop_close image {
  width: 100%;
}
.pop_ctr .pop_ctt,.pop_ctr .dialog_mask,.pop_ctr .pop_close {
  display: block;
}
.pop_main {
  float: left;
  margin: 0 80rpx;
  width: 550rpx;
  height: auto;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
}
.pop_title {
  float: left;
  width: 100%;
  line-height: 52rpx;
  font-size: 36rpx;
}
.pop_info {
  float: left;
  width: 100%;
  padding: 20rpx 0;
  height: auto;
  font-size: 28rpx;
  background: #fff;
}
.pop_btn {
  float: left;
  width:100%;
  margin-top: 10rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: #f25939;
}
button::after{
  border: none;
}