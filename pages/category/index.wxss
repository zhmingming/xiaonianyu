/* pages/category/index.wxss */
/*头部*/
.top_ctr {
  width: 100%;
  padding: 0 30rpx;
  height: 168rpx;
  position: fixed;
  background: #fff;
  z-index: 9999;
  box-sizing: border-box;
}
.search_ctr {
  float: left;
  width: 100%;
  margin: 10rpx 0;
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  text-align: center;
  line-height: 65rpx;
  font-size: 28rpx;
  color: #999;
}
.nav_ctr {
  float: left;
  margin-top: 10rpx;
  width: 100%;
  height: 68rpx;
  line-height: 64rpx;
  font-size: 32rpx;
  display: flex;
  white-space: nowrap;
}
.nav_cell,.nav_cell_on {
  margin-right: 30rpx;
  width: auto;
  border-bottom: 4rpx #fff solid;
  padding: 0 4rpx;
  color: #999;
  display: inline-block;
}
.nav_cell_on {
  color: #f95714;
  border-bottom: 4rpx #f95714 solid;
}

/*幻灯*/
.swiper {
  float: left;
  margin-top: 168rpx;
  width: 100%;
  height: 380rpx;
}
.swiper image {
  width: 100%;
  height: 100%;
}
/*通用*/
.h_ctr {
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

/*二级导航*/
.fw_ctr {
  float: left;
  width: 100%;
  height: 414rpx;
  padding: 20rpx 0 10rpx;
  display: flex;
  white-space: nowrap;
}
.fw_ctt {
  float: left;
  margin: 0 20rpx;
  width: 147rpx;
  height: auto;
}
.fw_pic {
  width: 147rpx;
  height: 147rpx;
  background: #f5f5f5;
}
.fw_pic image {
  width: 147rpx;
  height: 147rpx;
}
.fw_t1 {
  float: left;
  width: 100%;
  line-height: 60rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
}

/*框*/
.pub_ctr {
  float: left;
  margin: 20rpx 16rpx 0;
  width: 718rpx;
  height: auto;
}
.pub_title_ctr {
  float: left;
  width: 100%;
  height: 88rpx;
  border-radius: 20rpx 20rpx 0 0;
  background: #f59740;
  padding: 0 30rpx;
  box-sizing: border-box;
  color: #fff;
}
.pub_main_title {
  float: left;
  width: 180rpx;
  line-height: 88rpx;
  font-size: 36rpx;
}
.pub_sub_title {
  float: left;
  line-height: 88rpx;
  font-size: 28rpx;
}
.pub_title_btn {
  float: right;
  margin-top: 25rpx;
  height: 36rpx;
  border: 1px #fff solid;
  line-height: 36rpx;
  padding: 0 10rpx;
  font-size: 28rpx;
}
.pub_ctt {
  float: left;
  width: 100%;
  height: auto;
  border-radius: 0 0 20rpx 20rpx;
  background: #fff;
  padding-bottom: 20rpx;
}

.pub_goods_ctr {
  float: left;
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 212rpx;
  height: auto;
  padding: 6rpx 6rpx 10rpx;
  box-shadow: 0 0 10rpx #ddd;
  box-sizing: border-box;
  background: #fff;
}

.pub_goods_pic {
  position: relative;
}

.pub_goods_pic image{
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.pub_goods_rebate{
  position: absolute;
  padding: 0 10rpx;
  width: auto;
  height: 32rpx;
  line-height: 32rpx;
  color: #ff4b4a;
  font-size: 20rpx;
  border: 1px #ff4b4a solid;
  left: 0;
  top: 0;
  z-index: 2;
  background: #fff;
}

.pub_mark_ctr {
  float: left;
  margin-right: 10rpx;
  padding: 0 10rpx;
  width: auto;
  height: 32rpx;
  line-height: 32rpx;
  color: #fff;
  font-size: 20rpx;
  background: #ff4b4a;
}

.pub_price_ctr {
  float: left;
  width: 100%;
  padding: 10rpx 0;
  line-height: 50rpx;
  color: #f59740;
  font-size: 32rpx;
  font-weight: bold;
}

.pub_price_ctr span {
  padding-left: 20rpx;
  color: #ddd;
  font-size: 24rpx;
  font-weight: normal;
  text-decoration: line-through;
}

.pub_goods_title {
  float: left;
  width: 100%;
  height: 58rpx;
  line-height: 30rpx;
  color: #333;
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

/*特价*/
.topic_title {
  float: left;
  width: 100%;
  padding: 0 15%;
  padding-top: 10rpx;
  text-align: center;
  height: 90rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  box-sizing: border-box;
}
.topic_title_cell,.topic_title_cell_on {
    position: relative;
    float: left;
    width: 100%;
    color: #999;
}
.topic_title_cell_on {
  color: #333;
}
.topic_title_cell_on .line {
  position: absolute;
  width: 70rpx;
  height: 4rpx;
  background: #333;
  left: 226rpx;
  top: 74rpx;
  z-index: 9;
}

.topic_ctr {
  float: left;
  margin: 20rpx 16rpx 0;
  width: 718rpx;
  height: auto;
}
.topic_pic {
  float: left;
  width: 100%;
  height: 340rpx;
  
}
.topic_pic image {
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  height: 340rpx;
}
.topic_ctt {
  float: left;
  width: 100%;
  height: auto;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 0 0 20rpx 20rpx;
}
.topic_txt_ctr {
  float: left;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.topic_txt1 {
  float: left;
  width: 300rpx;
  overflow: hidden;
  font-size: 32rpx;
}
.topic_txt2 {
  float: right;
  color: #999;
  font-size: 28rpx;
}
.topic_txt2 span {
  background: #333;
  color: #fff;
  padding: 0 4rpx;
}
.topic_txt3 {
  float: left;
  width: 100%;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #999;
}
.topic_txt3 span {
  color: #f59740;
}

@import "/style/style.wxss";