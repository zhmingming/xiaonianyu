/* pages/fenxiao/index.wxss */
@import "/style/cells.wxss";
.fenxiao_top {
  float:left;
  margin-bottom: 16rpx;
  width: 100%;
  height: 380rpx;
  position: relative;
  overflow: hidden;
}
.fenxiao_top_bg {
  position: absolute;
  width: 100%;
  height: 380rpx;
  left:0;
  top:0;
  z-index: 1;
}
.fenxiao_top_bg image{
  width: 100%;
  display: block;
}
.fenxiao_top_img {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  box-shadow: 0 0 0 6rpx rgba(255, 255, 255, 0.4);
  left:40.5%;
  top:40rpx;
  z-index: 9;
}
.fenxiao_top_t1 {
  position: absolute;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  left:0;
  top:200rpx;
  z-index: 9;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}
.fenxiao_nav_ctr {
  position: absolute;
  width: 70%;
  height: auto;
  padding: 14rpx 15%;
  left: 0;
  bottom: 0;
  z-index: 5;
  background-color: rgba(0, 0, 0, 0.1);
}
.fenxiao_nav_cell {
  float: left;
  width: 49.5%;
  line-height: 36rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
}
.fenxiao_nav_line {
  float: left;
  margin-top: 20rpx;
  width: 2rpx;
  height: 40rpx;
  background: #ddd;
}

/*分享图*/
.dialog_mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}
.image_close {
  width: 40rpx;
  height: 40rpx;
  position:absolute;
  right: 134rpx;
  top: 10rpx;
  z-index: 20;
}
.share_pic_ctr .dialog_mask {
  display: block;
}
.share_pic_ctt {
  position: fixed;
  top: 100rpx;
  width: 100%;
  z-index: 11;
  display: none;
}
.share_pic_ctr .share_pic_ctt {
  display: block;
}
.share_pic_ctr .image_close {
  right: 134rpx;
  top: 10rpx;
}
.share_pic {
  margin: 0 auto;
  width: 500rpx;
  height: 750rpx;
  overflow: hidden;
  border-radius: 20rpx;
}
.share_pic image {
  width: 100%;
}
.share_btn {
  margin: 0 auto;
  margin-top: 30rpx;
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  border-radius: 6rpx;
  font-size: 28rpx;
}

/* y 新增样式 */
.flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user_top {
  float:left;
  width: 100%;
  height: 204rpx;
  position: relative;
  overflow: hidden;
  background-color: white;
}

.user_top_img {
  position: absolute;
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
  box-shadow: 0 0 0 6rpx rgba(255, 255, 255, 0.4);
  left:50%;
  bottom: 74rpx;
  transform: translateX(-50%);
  z-index: 9;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.2); 
}
.user_top_t1 {
  position: absolute;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  left:0;
  bottom: 14rpx;
  z-index: 9;
  text-align: center;
  color: #333;
  font-size: 28rpx;
}

.fenxiao_nav_sect {
  margin-bottom: 28rpx;
  background-color: rgba(220, 3, 11, 0.8);
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
  padding: 14rpx 30rpx 10rpx;
}

.fenxiao_nav_item {
  /* width: 33.33%; */
  position: relative;
  flex: 1;
  padding: 0 4rpx;
}

.fenxiao_nav_item::before {
  content: '';
  position: absolute;
  left: -1rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 44rpx;
  background-color: #fff;
}

.item_txt {
  font-size: 36rpx;
  line-height: 50rpx;
}

.cells_txt i {
  color: #777;
}

.cells_txt_left i {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.falseHide::before {
  display: none;
}

@import "/style/style.wxss";