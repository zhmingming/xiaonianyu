/* pages/goods/comment.wxss */
page{
  background-color:#fff;
}
.c_ctr {
  float: left;
  width: 100%;
  border-bottom: 1px #eee solid;
  padding: 20rpx;
  box-sizing: border-box;
}
.c_pic {
  float: left;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.c_pic image { 
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.c_name {
  float: left;
  line-height: 80rpx;
  padding-left: 20rpx;
  font-size: 24rpx;
}
.c_date {
  float: left;
  width: 100%;
  padding: 10rpx 0;
  color: #999;
  font-size: 24rpx;
}
.c_info {
  float: left;
  width: 100%;
  font-size: 24rpx;
}