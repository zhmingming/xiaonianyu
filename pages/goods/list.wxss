/* pages/goods/list.wxss */
/*头部导航*/
.top_navctr {
  width: 100%;
  height:40px;
  white-space: nowrap;
  font-size: 32rpx;
  border-bottom:1px #eee solid;
  position: fixed;
  z-index: 9999;
  background: #fff;
}
.top_nav,.top_nav1 {
  float: left;
  width:250rpx;
  line-height:80rpx;
  color: #333;
  text-align: center;
}

.top_nav1 {
  color: #DC030B;
}

/*到底了*/
.loading{
  float: left;
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  text-align: center;
  color: #ccc;
} 
.loading.complete:before{
  display: none; 
}

/* y添加 */

.flex {
  display: flex;
}

/* 商品 */
.goods_list {
  padding-top: 78rpx;
}

.goods_widget {
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.goods_imgWidget {
  width: 220rpx;
  height: 220rpx;
  box-shadow: 0 0 15rpx 0 rgba(0,0,0,0.2);
  border-radius: 6rpx;
}

.goods_imgWidget image {
  width: 100%;
}

.goods_detail_widget {
  font-size: 28rpx;
  line-height: 40rpx;
  width: 400rpx;
  position: relative;
  padding: 14rpx 0 20rpx;
}

.goods_title {
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  overflow: hidden;
  color: #333;
  margin-bottom: 20rpx;
}

.limit_widget {
  color: #777777;
  font-size: 22rpx;
  line-height: 32rpx;
  margin-bottom: 24rpx;
}

.limit_widget text {
  margin-left: 16rpx;
}

.goods_price {
  color: #DC030B;
  font-size: 36rpx;
}

.limit_widget .span {
  color: #ccc;
  text-decoration: line-through;
}

.progressBar {
  background-color: pink;
  border-radius: 12rpx;
  width: 182rpx;
  height: 12rpx;
  position: relative;
  margin-bottom: 26rpx;
}

.progressBar_shadow {
  position: absolute;
  top: 0;
  left: 0;
  width: 65%;
  height: 100%;
  border-radius: 12rpx;
  background-color: #F46B70;
}

.progressTxt {
  font-size: 22rpx;
  color: #ccc;
  line-height: 32rpx;
}

.progressTxt text {
  color: #DC030B;
}

.goods_discount {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  border-radius: 6rpx;
  padding: 4rpx 20rpx;
  color: #fff;
  font-size: 22rpx;
  background-color: #DC030B;
}

.loading_box {
  background-color: #f5f5f5;
  height: 62rpx;
  line-height: 62rpx;
  color: #ccc;
  text-align: center;
  font-size: 22rpx;
  width: 100%;
}

@import "/style/style.wxss";