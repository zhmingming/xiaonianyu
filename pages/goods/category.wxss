/* pages/goods/category.wxss */

.container {
  flex-direction: row;
  display: flex;
}

.category_left {
  float: left;
  width: 25%;
  font-size: 28rpx;
  background: #f5f5f5;
}

.category_right {
  float: left;
  width: 74%;
  font-size: 28rpx;
}

.category-item {
  float: left;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  text-align: center;
  position: relative;
}

.category-item.current {
  margin:0 auto;
  width:98%;
  color: #DC030B;
  background: #fff;
}

.category-item.current::after {
  content: ' ';
  display: block;
  position: absolute;
  bottom: 50%;
  transform: translateX(-50%);
  top: 16px;
  width: 6rpx;
  height: 32rpx;
  background: #DC030B;
}

.category_pctr {
  float: left;
  width: 32.6%;
  height: 186rpx;
  overflow: hidden;
  background: #fff;
}

.category_pic {
  margin: 4% 10% 0;
  float: left;
  width: 80%;
  height: 128rpx;
}

.category_pic image {
  width: 100%;
  height: 100%;
  display: block;
}

.category_txt {
  float: left;
  width: 100%;
  line-height: 45rpx;
  color: #333;
  text-align: center;
  overflow: hidden;
  font-size: 22rpx;
}
@import "/style/style.wxss";
