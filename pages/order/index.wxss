/* pages/order/index.wxss */
@import "/style/cells.wxss";
.container {
  padding-bottom:100rpx;
}
.cells_txt {
  float: left;
  width: 100%;
  border-bottom: 2rpx #f2f2f2 solid;
  padding-right: 24rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
.border0 { border: 0;}
.cell_left {
  float: left;
  width: 650rpx;
}
.cell_right {
  float: right;
  width: 50rpx;
  text-align: right;
}
.cell_right i {
  font-size: 36rpx;
}

.top_name,.top_addr {
  float: left;
  width: 100%;
}
.top_addr {
  color: #888;
  font-size: 28rpx;
}
.addr_line {
  float:left;
  margin-bottom: 16rpx;
  width: 100%;
  height:8rpx;
}
/*商品*/
.goods_pic { 
  float: left;
  width: 180rpx;
  height: 180rpx;
}
.goods_pic image { 
  width: 100%;
}
.goods_right {
  float: right;
  width: 500rpx;
}
.goods_title {
  float: left;
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  line-height: 80rpx;
}
.goods_spec {
  float: left;
  width: 100%;
  display: -webkit-box; 
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #888;
}
.goods_price {
  float: left;
  width: 100%;
  padding-top: 20rpx;
  color: #333;
}
.goods_price .fr {
  color: #888;
}
/*选项*/
.cell_ctr {
  float: left;
  width:100%;
  line-height: 88rpx;
}
.m_textarea {
  float: left;
  width:100%;
  height:144rpx;
  line-height: 48rpx;
}
/*底部提交*/
.foot_ctr {
  position: fixed;
  width: 100%;
  height: 98rpx;
  background:#f8f8f8;
  border-top: 2rpx #eee solid;
  left: 0; 
  bottom: 0;
  z-index: 9;
  line-height:98rpx;
  font-weight: bold;
  font-size: 32rpx;
}
.foot_left {
  float:left;
  width: 60%;
  height: 98rpx;
  padding-left: 24rpx;
}
.foot_right {
  float:right;
  width: 35%;
  height: 98rpx;
  color: #fff;
  text-align: center;
  border-radius: 0;
}

@import "/style/style.wxss";