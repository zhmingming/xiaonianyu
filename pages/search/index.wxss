/* pages/search/index.wxss */
page{
  background-color:#fff;
}
.search_ctr {
  width: 100%;
  padding: 0 30rpx;
  height: auto;
  box-sizing: border-box;
}
.search_ctt {
  float: left;
  width: 570rpx;
  margin: 10rpx 0;
  padding: 0 20rpx;
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  line-height: 65rpx;
  font-size: 28rpx;
  color: #999;
}
.search_ctt i {
  float: left;
  padding-right: 20rpx;
}
.search_ctt input {
  float: left;
  width: 500rpx;
  height: 64rpx;
  line-height: 64rpx;
  
}
.search_btn {
  float: left;
  width: 80rpx;
  margin: 10rpx 0;
  height: 64rpx;
  line-height: 65rpx;
  font-size: 32rpx;
  color: #333;
  text-align: right;
}