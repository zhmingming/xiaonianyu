/**goods.wxss**/
/*热销,列表,活动*/
.goods_list_ctr {
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.goods_list_cell {
  float: left;
  margin: 20rpx 1% 0;
  width: 48%;
  height: auto;
  position: relative;
}
.goods_list_cell image {
  width: 100%;
  display:block;
}
.goods_top_mark {
  position: absolute;
  line-height: 50rpx;
  padding: 0 10rpx;
  font-size: 28rpx;
  color: #fff;
  background: #f44;
  left: 0;
  top: 0;
  z-index: 5;
}
.goods_list_subtitle {
  margin-bottom: 10rpx;
  width: 100%;
  height: 60rpx;
  line-height:60rpx;
  background: #f1ece2;
  padding: 0 10rpx;
  box-sizing:border-box; 
  color: #a38f66;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}
.goods_list_ctt {
  float: left;
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  background: #fff;
}
.goods_list_mark {
  float: left;
  margin-right: 10rpx;
  padding: 0 10rpx;
  width: auto;
  height: 32rpx;
  line-height: 32rpx;
  color: #fff;
  font-size: 20rpx;
  background: #ff4b4a;
}
.goods_list_t1 {
  float: left;
  width: 100%;
  display: -webkit-box;
  height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
.goods_list_t2 {
  float: left;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #b4282d;
  font-size: 36rpx;
}
.goods_list_t2 span{
  padding-left: 20rpx;
  color: #999;
  font-size: 28rpx;
}
.goods_list_t2 .span{
  text-decoration: line-through;
}
/*包邮打标*/
.by_ctr1,.by_ctr2 {
  position: absolute;
  right: 0;
  top: 0;
  width: 80rpx;
  height: 80rpx;
  z-index: 2;
}
.by_ctr2 {
  width: 100rpx;
  height: 100rpx;
}
.by_ctr1 image,.by_ctr2 image {
  width: 100%;
}